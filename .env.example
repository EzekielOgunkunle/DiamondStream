# DiamondStream Environment Configuration
# Copy this file to .env and update the values for your environment

# SECURITY WARNING: Generate a new secret key for production!
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production

# Environment
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL for production, SQLite for development)
# DATABASE_URL=postgresql://user:password@localhost:5432/diamondstream

# Redis Configuration (optional for development)
# REDIS_URL=redis://localhost:6379/0

# JWT Configuration
# JWT_SECRET_KEY=your-jwt-secret-key-here

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@diamondstream.com

# Twilio SMS Configuration
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Blockchain API Keys
# BLOCKCHAIN_INFO_API_KEY=your-blockchain-info-api-key
# ETHERSCAN_API_KEY=your-etherscan-api-key
# BLOCKCHAIR_API_KEY=your-blockchair-api-key
# COINGECKO_API_KEY=your-coingecko-api-key

# Logging Level
DJANGO_LOG_LEVEL=INFO
